{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Snap Data Explorer",
  "version": "0.8.1",
  "identifier": "com.kody.snap-data-explorer-app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Snap Data Explorer",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "visible": true,
        "decorations": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; media-src 'self' asset: https://asset.localhost; style-src 'self' 'unsafe-inline'; script-src 'self'",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$HOME/Downloads/**", "$HOME/Documents/**", "$HOME/Desktop/**"]
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/KodyDennon/SnapDataExplorer/releases/latest/download/latest.json"
      ],
      "pubkey": "RWQ+H3Uk/Wgq+2VnRAakBWU5s/u6QkuOtABh7yYdZzsEmID5fp62I5w/"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "category": "Utility",
    "shortDescription": "Explore and analyze your Snapchat data exports",
    "longDescription": "Snap Data Explorer is a privacy-first desktop application that reconstructs your Snapchat chat history, memories, and media from My Data exports. Features full-text search, media gallery, and conversation browsing."
  }
}
